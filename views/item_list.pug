extends layout

block content
  h1= title
    
  div
    if item_list.length
      dl 
        each item in item_list
          dt 
            a(href=item.url)  
          h4 #{item.title}
          dd #{item.description}
          dd #{`$${item.price}`}
          dd #{`Made by ${item.brand.name}`}
    else
      p There are no items
         